<Application x:Class="WpfPractice.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <LinearGradientBrush x:Key="brushLinearPurpleToBlack"
                             StartPoint="0 0.5"
                             EndPoint="1 0.5">
            <GradientStop Color="DarkMagenta" Offset="0"/>
            <GradientStop Color="Black" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="brushLinearWhiteToCyan">
            <GradientStop Color="White" Offset="0"/>
            <GradientStop Color="Cyan" Offset="1"/>
        </LinearGradientBrush>

        <RadialGradientBrush x:Key="brushRadialRegular">
            <GradientStop Color="DarkRed" Offset="0"/>
            <GradientStop Color="Black" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="brushRadialNotRegular">
            <GradientStop Color="DarkMagenta" Offset="0"/>
            <GradientStop Color="Black" Offset="1"/>
        </RadialGradientBrush>
    </Application.Resources>
</Application>
